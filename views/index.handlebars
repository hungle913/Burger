<br>

<div>
    <h2 id="welcome">Welcome to Eat Da Burger!</h2> 
</div>

<br>

<div id="image_container"></div>
    <img id="burger_image" src="assets/images/burgers.PNG" alt="Burgers">
<br>

<div>
    <h2 id="new_burger">Would you like to order another burger?</h2>
</div>

<br>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form action="/burgers/create" method="POST">
                <input type="text" name="BURGER_NAME" class="form-control" id="enter_burger" value="">
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<br>
<hr>
<br>

<div class="container">
    <div class="row">
        <div class="col-lg-8" id="title-div">
            <h1 id="title">EAT DA BURGER!</h1>

            <div class="row">        
                {{#each burger_data}}
                    {{#unless this.DEVOURED}}
                        <div class="col-lg-3">
                            <form method="POST" action="/burgers/update" class="button">
                            <input type="hidden" name="burger_id" type="text" value={{this.id}}
                            <br>
                            <button type="submit" class="btn btn-outline-primary"> DEVOUR IT!</button>
                            </form>
                        </div>
                                                        
                        <div class="col-lg-9">
                            <h3 id="burger_to_eat">{{this.id}}. {{this.BURGER_NAME}}</h3>
                        </div>
                    {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="col-lg-4" id="title-div">
            <h1 id="title">BURGER EATEN!</h1>

            <div class="col-lg-12">
                {{#each burger_data}}
                    {{#if this.DEVOURED}}
                        <input class="form-control" type="text" placeholder="{{this.id}}.{{this.BURGER_NAME}}" readonly>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>

