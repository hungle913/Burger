<div id="image_container">

</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12" id="title-div">
            <h1 id="title">EAT DA BURGER!</h1>
        </div>
        <div class="col-lg-6">
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.DEVOURED}}
                        <div class="col-lg-9">
                            <h3>{{this.id}}. {{this.BURGER_NAME}}</h3>
                        </div>
                        <div class="col-lg-3">
                            <form method="POST" action="/burgers/update" class="button">
                            <input type="hidden" name="burger_id" type="text"
                            value={{this.id}}
                            <br>
                            <button type="submit" class="btn btn-outline-primary"> DEVOUR IT!</button>
                            </form>
                        </div>
                    {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="col-lg-6">
            {{#each burger_data}}
                {{#if this.DEVOURED}}
                    <input class="form-control" type="text" placeholder="{{this.id}}.{{this.BURGER_NAME}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<br>
<hr>
<br>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form action="/burgers/create" method="POST">
                <label for="newBurger" id="newBurger">What new burger would you like to order?</label>
                <input type="text" name="BURGER_NAME" class="form-control" id="enter_burger" value="">
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>